{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "lib/typescript",
    "types": [],                       
    "skipLibCheck": true,
    "noEmitOnError": false,
    "strict": false,
    "esModuleInterop": true
  },
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "react-native": ["./types/react-native"],
      "react-native-reanimated": ["./types/react-native-reanimated"]
    }
  }
}
